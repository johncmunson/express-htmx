mixin postPreviewList(posts, asPostHeader = false)
  div(class='sm:grid sm:grid-cols-3 sm:gap-y-8 sm:gap-x-8 items-start mt-12')
    each post, i in posts
      - const isFirst = i === 0;
      if !asPostHeader
        div(class=`flex flex-col sm:flex-col-reverse ${isFirst ? '' : '-sm:mt-8'}`)
          div(class="font-mono text-xs sm:mt-1")
            | #{post.publishDate.replace(/-/g, '.')}
          a(href=`/posts/${post.slug}` class='font-medium hover:text-primary-400')
            | #{post.frontmatter.title}
        a(href=`/posts/${post.slug}` class='col-span-2 hover:text-primary-400 mt-1 sm:mt-auto inline-block' style="text-align: justify; text-justify: inter-word; hyphens: auto;")
          | #{post.frontmatter.description}&nbsp;&nbsp;
          span(class='text-primary-400') â†’
      else
        div(class='flex flex-col sm:flex-col-reverse')
          div(class="font-mono text-xs sm:mt-1")
            | #{post.publishDate.replace(/-/g, '.')}
          span(class='font-medium')= post.frontmatter.title
        span(class='col-span-2 mt-1 sm:mt-auto inline-block' style="text-align: justify; text-justify: inter-word; hyphens: auto;")= post.frontmatter.description
