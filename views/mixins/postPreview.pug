mixin postPreview(post, isFirst)
  div(class=`flex flex-col sm:flex-col-reverse ${isFirst ? '' : '-sm:mt-8'}`)
    div(class="font-mono text-xs")
      | #{post.publishDate.replace(/-/g, '.')}
    a(href=`/posts/${post.slug}` class='font-medium hover:text-primary-400')
      | #{post.frontmatter.title}
  div(class="col-span-2")
    a(href=`/posts/${post.slug}` class='hover:text-primary-400 block' style="text-align: justify; text-justify: inter-word; hyphens: auto;")
      | #{post.frontmatter.description}&nbsp;&nbsp;
