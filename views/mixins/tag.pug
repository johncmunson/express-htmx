mixin tag(text, link, count)
  span(class='relative')
    a(href=`${link}` class=`rounded-full pl-3 ${count ? 'pr-4' : 'pr-3'} py-1 bg-neutral-200 dark:bg-neutral-700 outline outline-neutral-300 dark:outline-neutral-600 outline-offset-1 hover:outline-primary-400 dark:hover:outline-primary-400`)= text
    if count
      span(class='absolute -top-3 -right-2.5 rounded-full p-1 bg-neutral-200 dark:bg-neutral-700 outline outline-neutral-300 dark:outline-neutral-600 outline-offset-1 cursor-default')
        svg(class='h-3.5 w-3.5' viewBox='0 0 20 20' fill='currentColor' aria-hidden='true')
          text(class='font-mono' x=`${count > 9 ? 1 : 5}` y='15')= count
