header
  - const blogTitle = "John Munson's Blog";
  nav(class="flex flex-col md:flex-row md:justify-between")
    div.relative
      a(href='/' class="font-bold text-lg")= blogTitle
      a(href='/' class="font-bold text-lg absolute top-0 left-0 underline decoration-wavy underline-offset-8 opacity-0 hover:opacity-100 transition-[opacity] duration-500 ease-in-out")= blogTitle
    ul(class="flex text-lg mt-3 md:mt-0")
      li
        a(href='/posts/tags/popular') Popular
      li(class='ml-4')
        a(href='/newsletter') Newsletter
      li(class='ml-4')
        a(href='/feeds.xml') RSS
      li(class='ml-4')
        a(href='/about') About
      li(class='ml-4')
        a(href='/contact') Contact
      li(class='ml-auto md:ml-6')
        include ../partials/darkModeToggle
